<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/txtgreatofferbanar"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/skip_button"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner_great_offer"
       />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vegetables Juction"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/txtgreatofferbanar"
        app:layout_constraintStart_toStartOf="@id/txtgreatofferbanar"
        app:layout_constraintTop_toBottomOf="@id/txtgreatofferbanar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtdicount"
        android:text="8 mins"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/textView5"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtdicountgfh"
        android:text="50% OFF"
        android:layout_marginBottom="8dp"
        android:textSize="10sp"
        android:textColor="#ff9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtdicount"
        app:layout_constraintTop_toBottomOf="@id/txtdicount"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/txtgreatofferbanar"
        app:layout_constraintEnd_toEndOf="@id/txtgreatofferbanar"
        app:layout_constraintStart_toStartOf="@id/txtgreatofferbanar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@id/txtgreatofferbanar"
        app:layout_constraintVertical_bias="1.0"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:backgroundTint="#4CAF50"
        android:text="4.5"

        />


</androidx.constraintlayout.widget.ConstraintLayout>