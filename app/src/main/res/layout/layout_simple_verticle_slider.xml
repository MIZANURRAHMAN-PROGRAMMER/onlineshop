<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:id="@+id/simpleimage"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/skip_button"
            android:src="@drawable/simple_product_pic"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtsimpletitle"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="Accer Aspire-5 A51"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="4.6"
                    android:id="@+id/txtsimplecoupon"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/search_round"
                    android:backgroundTint="#227C26"
                    android:gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="right"

                   />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtsimpledescription"
                android:text="9th Gen Acer Nitro 5 15.6″ FHD IPS Laptop Black I5-9300H"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="৳ 78,900 "
                android:id="@+id/txtsimple_price"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtoff"
                android:text="20% OFF-Use code ZOMATO"
                android:textColor="#FF9800"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtstatus"
                android:text="BrandAcerSKU114750556 BD-103254613"
                android:textColor="#2196F3"
                />




        </LinearLayout>






    </LinearLayout>




</androidx.cardview.widget.CardView>